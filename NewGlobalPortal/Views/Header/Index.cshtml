                    }
                    if (ViewBag.SiparisleriGorebilirMi)
                    {
                        <li class="navigationsiparisler"><a href="/Orders/Index">Siparişler</a></li>
                    }
                    if (ViewBag.IrsaliyeleriGorebilirMi)
                    {
                        <li class="navigationirsaliyeler"><a href="/Dispatch/Index">İrsaliyeler</a></li>
                    }
